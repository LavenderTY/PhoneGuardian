<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5000"
    tools:context="com.ty.phoneguardian.Activity.ToastLocationActivity">

    <ImageView
        android:id="@+id/iv_drag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/drag" />

    <Button
        android:id="@+id/but_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/call_locate_blue"
        android:text="@string/change_position"
        android:textSize="20sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/but_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/call_locate_blue"
        android:text="@string/change_position"
        android:textSize="20sp" />
</RelativeLayout>
