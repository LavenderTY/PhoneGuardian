<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <stroke
        android:width="1dp"
        android:color="#ae0509e7"></stroke>
    <!--android:angle="180"  修改颜色渐变角度-->
    <gradient android:startColor="#8063f5"
        android:endColor="#b1c0ed"
        android:angle="180"/>
    <corners android:radius="15dp" />
    <!--padding 设置内间距-->
    <padding android:top="10dp"
        android:bottom="10dp"
        android:right="10dp"
        android:left="10dp"/>
</shape>